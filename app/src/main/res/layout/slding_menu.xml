<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.jeremyfeinstein.slidingmenu.lib.SlidingMenu
        xmlns:sliding="http://schemas.android.com/apk/res-auto"
        android:id="@+id/slidingmenulayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        sliding:viewAbove="@layout/activity_main"
        sliding:viewBehind="@layout/menu_layout"
        sliding:touchModeAbove="margin"
        sliding:touchModeBehind="margin"
        sliding:shadowDrawable="@drawable/slidingmenu_shadow"
        sliding:shadowWidth="10sp"
        sliding:behindWidth="250dp"
        sliding:behindScrollScale="0.5"
        sliding:fadeEnabled="true"
        sliding:fadeDegree="0.8"
        sliding:selectorEnabled="true">
    </com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>

</LinearLayout>